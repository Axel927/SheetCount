<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.SummaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C5C1C1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/totalText"
                android:textSize="24sp"
                android:translationY="16dp" />

            <TextView
                android:id="@+id/totalCounted"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="@string/totalSheetText"
                android:textSize="24sp"
                android:translationY="16dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="483dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/photoListView"
                android:layout_width="match_parent"
                android:layout_height="482dp"
                android:scrollbars="vertical">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#193BEC"
                android:text="@string/back"
                android:textSize="16sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/finishBtn"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#193BEC"
                android:text="@string/finish"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>